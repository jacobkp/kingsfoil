# API Keys
# You can use a single API key for all operations (recommended)
ANTHROPIC_API_KEY=sk-ant-your-actual-key-here

# OR use separate keys for different operations
# ANTHROPIC_API_KEY_VISION=your-vision-api-key
# ANTHROPIC_API_KEY_ANALYSIS=your-analysis-api-key
# ANTHROPIC_API_KEY_EXPLANATION=your-explanation-api-key

# Model Configuration
# Use a single model for all operations (recommended)
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# OR configure different models for each operation
# ANTHROPIC_MODEL_VISION=claude-sonnet-4-5-20250929
# ANTHROPIC_MODEL_ANALYSIS=claude-sonnet-4-5-20250929
# ANTHROPIC_MODEL_EXPLANATION=claude-sonnet-4-5-20250929

# Token Limits (optional - defaults are set in lib/config.ts)
# ANTHROPIC_MAX_TOKENS_VISION=4096
# ANTHROPIC_MAX_TOKENS_ANALYSIS=8192
# ANTHROPIC_MAX_TOKENS_EXPLANATION=2048

# Access Control
# Comma-separated list of valid passcodes (no spaces or special characters)
VALID_PASSCODES=passcode1,passcode2,passcode3

# Admin Panel
# Password for accessing /admin/stats page
ADMIN_PANEL_PASSWORD=your-secure-admin-password
